@model IEnumerable<WebAppTest.Models.CourseDetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Course Detail Data</h2>
<div class="x_content">
    <div class="row">
        <p>
            @if (Session["AccountType"].ToString() == "Admin" || Session["AccountType"].ToString() == "Staff")
            {
                @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-secondary" })
            }

        </p>
        <div class="card-box table-responsive">
            <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Course.CourseName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Trainees.TraineeName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Trainer.FullName)
                        </th>
                        <th>Modify</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Course.CourseName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Trainees.TraineeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Trainer.FullName)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.CourseID, id2 = item.TraineeID, id3 = item.TrainerID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.CourseID, id2 = item.TraineeID, id3 = item.TrainerID }, new { onclick = "return confirm('The operation will delete information! You definitely want to delete this Course Detail?');" })
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
