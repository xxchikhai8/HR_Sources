@model IEnumerable<WebAppTest.Models.Course>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Course Data</h2>
<div class="x_content">
    <div class="row">
        <p>
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-secondary" })
        </p>
        <div class="card-box table-responsive">
            <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.CourseID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Categories.CatID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CourseName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CourseDes)
                        </th>
                        <th>Modify</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CourseID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Categories.CatID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CourseName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CourseDes)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.CourseID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.CourseID }, new { onclick = "return confirm('The operation will delete other information! You definitely want to delete this Course?');" })
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
