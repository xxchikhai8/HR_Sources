@model WebAppTest.Models.Account

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="x_title">
    <h2>Update Account</h2>
    <div class="clearfix"></div>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="x_content">
    <br />
    <div class="item form-group">
        <div class="col-md-12 ">
            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", Readonly = "readonly" } })
            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="item form-group">
        <div class="col-md-12 ">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "Password" } })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="item form-group" style="margin: 15px 0px">
        <div class="col-md-12">
            @Html.LabelFor(model => model.AdminState, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.AdminState)
            @Html.ValidationMessageFor(model => model.AdminState, "", new { @class = "text-danger" })
           
        </div>
    </div>
    <div class="item form-group">
        <div class="col-md-12">
            @Html.LabelFor(model => model.AccountType, htmlAttributes: new { @class = "control-label col-md-4" })
            @Html.DropDownList("AccountType", new List<SelectListItem>
            {
                new SelectListItem {Text = "Admin", Value = "Admin"},
                new SelectListItem {Text = "Staff", Value = "Staff"},
                new SelectListItem {Text = "Trainer", Value = "Trainer"},
                new SelectListItem {Text = "Trainee", Value = "Trainee"},
            }, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.AccountType, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="ln_solid"></div>
    <div class="item form-group">
        <div>
            <input type="submit" value="Save" class="btn btn-secondary" />
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
</div>
}
