@model IEnumerable<WebAppTest.Models.Categories>

@{
    ViewBag.Title = "Index Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Categories Data</h2>
<div class="x_content">
    <div class="row">
        <p>
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-secondary" })
        </p>
        <div class="card-box table-responsive">
            <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.CatID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CatName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CatDes)
                        </th>
                        <th>Modify</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CatID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CatName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CatDes)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.CatID }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.CatID }, new { onclick = "return confirm('The operation will delete other information! You definitely want to delete this category?');" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>